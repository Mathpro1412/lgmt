logging {
  level  = "info"
  format = "logfmt"
}

prometheus.scrape "windows_exporter" {
  targets    = [{ __address__ = "host.docker.internal:9182" }]
  forward_to = [prometheus.remote_write.mimir.receiver]
}

prometheus.remote_write "mimir" {
  endpoint {
    url = "http://mimir:9009/api/v1/push"
  }
}